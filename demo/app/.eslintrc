{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true
  },
  "extends": ["standard"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-undef": ["off"],
    "semi": ["error", "always"],
    "space-before-function-paren": ["error", "never"]
  }
}
