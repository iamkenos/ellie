{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "sourceMap": true,
    "target": "ES5",
    "types": ["node", "@wdio/sync", "@types/jest"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "build", "test", "bin", "src/cli/resources/samples"]
}
