{
  "compilerOptions": {
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "removeComments": false,
    "target": "ES5",
    "types": ["node", "@wdio/sync", "@types/jest"]
  },
  "include": ["./src/**/*.ts", "./index.ts"],
  "exclude": ["node_modules", "build", "test", "bin"]
}
