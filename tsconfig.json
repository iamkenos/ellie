{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "outDir": "build",
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": { "@iamkenos/ellie": ["build/index"] },
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2019",
    "types": [
      "node",
      "@types/jest",
      "webdriverio/sync",
      "@wdio/cucumber-framework",
      "wdio-intercept-service",
      "wdio-image-comparison-service"
    ]
  },
  "include": ["./src/**/*.ts", "./demo/**/*.ts"],
  "exclude": ["node_modules", "build", "test", "bin"]
}
